<div class="container py-4">

    <div class="expense-form-card mx-auto shadow-sm p-4 mb-5 bg-white rounded-3">

        <h2 class="text-center mb-4 fw-bold">
            {{#if expense}}Edit Expense{{else}}Add Expense{{/if}}
        </h2>

        <form method="POST" action="{{#if expense}}/expenses/edit/{{expense._id}}{{else}}/expenses/add{{/if}}">

            <div class="mb-3">
                <label class="form-label fw-semibold">Title</label>
                <input name="title" class="form-control form-control-lg" value="{{expense.title}}" required>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Category</label>
                <input name="category" class="form-control form-control-lg" value="{{expense.category}}" required>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Amount</label>
                <input name="amount" type="number" step="0.01" class="form-control form-control-lg" value="{{expense.amount}}" required>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Date</label>
                <input name="date" type="date" class="form-control form-control-lg" value="{{expense.date}}">
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Note</label>
                <textarea name="note" class="form-control form-control-lg" rows="3">{{expense.note}}</textarea>
            </div>

            <button class="btn btn-primary btn-lg w-100 mt-3 save-btn">Save</button>

        </form>

    </div>

</div>
